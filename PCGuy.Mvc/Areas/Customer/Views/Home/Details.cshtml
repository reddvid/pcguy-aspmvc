@using PCGuy.Helpers
@model PCGuy.Common.Entities.Product

@{
    ViewData["Title"] = Model.Name;
}

<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-lg-6 col-sm-12">
                    <img src="@Model.FeaturedImage" width="100%" alt="Product image for @Model.Name?.ToImageAltText()"/>
                </div>
                <div class="col-lg-6 col-sm-12 mt-sm-2">
                    <h4>@Model.Name</h4>
                    <p class="text-primary-emphasis">@Model.DisplayPrice</p>
                    <p class="text-primary">@Model.Brand?.Name</p>
                    <a href="#" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row mt-2">
                    <div class="row">
                        <h4>Description</h4>
                        <p class="fs-6">@Html.Raw(Model.Description)</p>
                    </div>
                    <div class="row">
                        <h4>Specifications</h4>
                        <p class="fs-6">@Html.Raw(Model.Specifications)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>