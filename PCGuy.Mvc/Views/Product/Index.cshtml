@using System.Globalization
@using PCGuy.Common.Entities
@model List<Product>

@{
}

<h1>@ViewData["Title"]</h1>

<div class="container ">
    <div class="row mb-3 ">
        <div class="col-6"></div>
        <div class="col-6 text-end ">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i><span class="ms-2">Add Product</span>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="flex-lg-wrap">
            @foreach (var p in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h4 class="card-title">@p.Name</h4>
                        <h6 class="card-subtitle mb-2 text-muted">@(p.Price.ToString("C", new CultureInfo("en-PH")))</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn-info btn">Edit</a>
                        <a asp-route-id="@p.Id" asp-action="Delete" class="btn btn-danger ms-2">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>