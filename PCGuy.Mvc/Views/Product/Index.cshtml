@using System.Globalization
@using PCGuy.Common.Entities
@model List<Product>


<div class="row mb-3 ">
    <div class="col-6">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-6 text-end ">
        <a asp-controller="Product" asp-action="Create" asp-route-id="@TempData["ProductsViewId"]" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i><span class="ms-2">Add Product</span>
        </a>
    </div>
</div>
<div class="row">
    @foreach (var p in Model)
    {
        <partial name="_ProductItem" model="p"/>
    }
</div>